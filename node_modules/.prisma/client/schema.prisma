generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  userId   String   @id 
  userName    String 
  //avatar  String? // 프로필사진은 자유
  createdAt DateTime  @default(now())
  undatedAt DateTime  @updatedAt
  tweets Tweet[]
}

model Tweet {
  tweetNo     Int @id @default(autoincrement())
  author   User   @relation(fields: [authorId], references: [userId])
  authorId String 
  createdAt DateTime  @default(now())
  undatedAt DateTime  @updatedAt
  //likes Like[]
}

